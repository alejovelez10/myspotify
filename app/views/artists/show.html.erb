<div class="container">
	

<div class="row">
<div class="col-sm-3 col-md-8">
<div class="row ">
<h1><%=@artist.name%></h1>
<br>

<h4>albums(<%=@albums.count%>)</h4>
<br>
</div>
<div class="row index">
<% @albums.each do |album|%>

  <div class="col-sm-3 col-md-3">
    <div class="thumbnail">
      <%= image_tag (album.image_url)%>
      <div class="caption">
        <h3><%= album.name%></h3>
        <p><%= album.released_at%></p>
        
      </div>
    </div>
  </div>

<%end%>
</div>
</div>
<div class="col-sm-3 col-md-4">
 <div class="col-sm-3 col-md-12">
    <div class="thumbnail">
      <%= image_tag (@artist.image_url)%>
      
    </div>
  </div>
</div>

</div>
</div>
</div>
